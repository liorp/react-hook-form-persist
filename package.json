{
  "name": "@liorpo/react-hook-form-persist",
  "version": "1.0.10",
  "description": "A React Hook Form persistence library with TypeScript support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "react",
    "react-hook-form",
    "persist",
    "form",
    "storage",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-hook-form": ">=7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.64.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liorp/react-hook-form-persist.git"
  },
  "bugs": {
    "url": "https://github.com/liorp/react-hook-form-persist/issues"
  },
  "homepage": "https://github.com/liorp/react-hook-form-persist#readme"
}
